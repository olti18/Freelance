@model Freelance.UI.Models.AddProjectPostDto


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Project</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #c9e4ca, #e9f5eb);
            font-family: "Arial", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: linear-gradient(135deg, #ffffff, #f9fcfa);
            border-radius: 15px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
            padding: 2rem;
            max-width: 450px;
            width: 100%;
            overflow: hidden;
            position: relative;
        }

            .form-container::before {
                content: "";
                position: absolute;
                top: -60px;
                left: -60px;
                width: 120px;
                height: 120px;
                background: rgba(40, 167, 69, 0.1);
                border-radius: 50%;
                z-index: 0;
            }

            .form-container::after {
                content: "";
                position: absolute;
                bottom: -60px;
                right: -60px;
                width: 120px;
                height: 120px;
                background: rgba(40, 167, 69, 0.1);
                border-radius: 50%;
                z-index: 0;
            }

        .header {
            text-align: center;
            margin-bottom: 1.5rem;
            position: relative;
            z-index: 1;
        }

            .header h3 {
                font-weight: bold;
                color: #28a745;
                font-size: 1.5rem;
            }

            .header p {
                color: #6c757d;
                font-size: 0.9rem;
                margin-top: 0.3rem;
            }

        .form-group {
            position: relative;
            margin-bottom: 1.2rem;
            z-index: 1;
        }

            .form-group input,
            .form-group textarea {
                width: 100%;
                border: none;
                border-radius: 10px;
                padding: 0.8rem 1rem 0.8rem 2.5rem;
                font-size: 0.95rem;
                background: #f8f9fa;
                box-shadow: inset 0px 2px 4px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
            }

            .form-group textarea {
                height: 100px;
                resize: none;
            }

                .form-group input:focus,
                .form-group textarea:focus {
                    outline: none;
                    border: 2px solid transparent;
                    background: linear-gradient(135deg, #f8f9fa, #f8f9fa) padding-box, linear-gradient(135deg, #28a745, #218838) border-box;
                }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 0.8rem;
                transform: translateY(-50%);
                color: #28a745;
                font-size: 1.2rem;
            }

        .btn-create {
            display: block;
            width: 100%;
            padding: 0.75rem;
            font-size: 0.95rem;
            font-weight: bold;
            color: #fff;
            background: linear-gradient(135deg, #28a745, #218838);
            border: none;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(40, 167, 69, 0.2);
            transition: all 0.3s ease;
        }

            .btn-create:hover {
                background: linear-gradient(135deg, #218838, #28a745);
                box-shadow: 0px 6px 12px rgba(40, 167, 69, 0.3);
            }

        .progress-container {
            position: relative;
            height: 5px;
            background: #f8f9fa;
            border-radius: 5px;
            overflow: hidden;
            margin: 1.5rem 0;
            box-shadow: inset 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .progress-bar {
            height: 100%;
            width: 0%;
            background: linear-gradient(135deg, #28a745, #218838);
            transition: width 0.4s ease;
        }

        .progress-container:hover .progress-bar {
            background: linear-gradient(135deg, #218838, #28a745);
        }

        .animation-bg {
            position: absolute;
            top: -100px;
            left: -100px;
            width: 200px;
            height: 200px;
            background: rgba(40, 167, 69, 0.2);
            animation: float 6s infinite alternate;
            border-radius: 50%;
        }

            .animation-bg.secondary {
                top: auto;
                left: auto;
                bottom: -100px;
                right: -100px;
                animation: float-reverse 6s infinite alternate;
            }
        @@keyframes float {
            0%

        {
            transform: translateY(0px);
        }

        100% {
            transform: translateY(20px);
        }

        }
        @@keyframes float-reverse {
            0%

        {
            transform: translateY(20px);
        }

        100% {
            transform: translateY(0px);
        }

        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="animation-bg"></div>
        <div class="animation-bg secondary"></div>
        <div class="header">
            <h3>Create Your Project</h3>
            <p>Start your journey by providing the details below</p>
        </div>
        <div class="progress-container">
            <div class="progress-bar" id="progress-bar"></div>
        </div>
        <form method="post" id="project-form">
            <div class="form-group">
                <i class="fas fa-heading"></i>
                <input asp-for="Title" type="text" placeholder="Project Title" required />
            </div>
            <div class="form-group">
                <i class="fas fa-align-left"></i>
                <textarea asp-for="Description" placeholder="Project Description" required></textarea>
            </div>
            <div class="form-group">
                <i class="fas fa-user"></i>
                <input asp-for="Author" type="text" placeholder="Author Name" required />
            </div>
            <div class="form-group">
                <i class="fas fa-dollar-sign"></i>
                <input asp-for="Budget" type="number" placeholder="Budget ($)" required />
            </div>
            <button type="submit" class="btn-create">Create Project</button>
        </form>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const form = document.getElementById("project-form");
        const progressBar = document.getElementById("progress-bar");
        const inputs = Array.from(form.elements);

        form.addEventListener("input", () => {
          const completed = inputs.filter(
            (input) => input.value.trim() !== ""
          ).length;
          const progress = (completed / (inputs.length - 1)) * 100; // -1 to exclude the submit button
          progressBar.style.width = `${progress}%`;
        });
    </script>
</body>
</html>









