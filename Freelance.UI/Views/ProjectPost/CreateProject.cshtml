@model Freelance.UI.Models.AddProjectPostDto

@{
    ViewData["Title"] = "Create Project Post";
}   

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Create Project Post</h2>
    
    <form  method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" id="Title" placeholder="Enter project title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="Enter project description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label for="Budget" class="form-label">Budget ($)</label>
            <input asp-for="Budget" type="number" class="form-control" id="Budget" placeholder="Enter budget" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Author" class="form-label">Description</label>
            <textarea asp-for="Author" class="form-control" id="Description" rows="3" placeholder="Enter project description"></textarea>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

  
        
        @*<div class="mb-3">
            <label for="Deadline" class="form-label">Deadline</label>
            <input asp-for="Deadline" type="datetime-local" class="form-control" id="Deadline" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label for="Category" class="form-label">Category</label>
            <input asp-for="Category" class="form-control" id="Category" placeholder="Enter project category" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>*@
        
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Create</button>
            @*<a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>*@
        </div>
    </form>
</div>