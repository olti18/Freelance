        <!-- Right Content -->
        <div class="right-content">
            <h4>Why Choose Us?</h4>
            <p>We connect professionals to projects that match their skills and interests.</p>
            <ul>
                <li><i class="fas fa-check-circle"></i> Verified Clients</li>
                <li><i class="fas fa-check-circle"></i> Secure Payments</li>
                <li><i class="fas fa-check-circle"></i> Easy Management</li>
                <li><i class="fas fa-check-circle"></i> 24/7 Support</li>
            </ul>

            <!-- Featured Projects -->
            <div class="featured-projects">
                <h4>Featured Projects</h4>
                <div class="featured-project-item">
                    <h5>Mobile App Development</h5>
                    <p>Build a cutting-edge mobile application for a growing startup.</p>
                </div>
                <div class="featured-project-item">
                    <h5>Website Redesign</h5>
                    <p>Redesign a corporate website to improve user experience.</p>
                </div>
            </div>

            <!-- How It Works -->
            <div class="how-it-works">
                <h4>How It Works</h4>
                <div class="how-it-works-step">
                    <i class="fas fa-user-plus"></i>
                    <h5>Step 1: Sign Up</h5>
                    <p>Create an account to access projects and proposals.</p>
                </div>
                <div class="how-it-works-step">
                    <i class="fas fa-briefcase"></i>
                    <h5>Step 2: Browse Projects</h5>
                    <p>Find projects that match your skills and interests.</p>
                </div>
                <div class="how-it-works-step">
                    <i class="fas fa-check"></i>
                    <h5>Step 3: Submit Proposals</h5>
                    <p>Submit your proposal and start collaborating.</p>
                </div>
            </div>

            <!-- Testimonials -->
            <div class="testimonials">
                <h4>What Our Users Say</h4>
                <div class="testimonial">
