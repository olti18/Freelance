<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Projects</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="index" asp-controller="ProjectPost" asp-action="Index">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ProjectPost" asp-action="MyProjects">My Projects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ProjectPost" asp-action="createproject">Create Project</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Proposalss" asp-action="MyProposalss">See Proposals</a></li>
                    <li class="nav-item"><a class="btn btn-navbar-login" asp-controller="Auth" asp-action="Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Left Content -->
        <!-- Left Content -->
        <div class="left-content">
            @foreach (var post in Model)
            {
                <div class="project-item p-4">
                    <h5 class="project-title">
                        <i class="fas fa-laptop-code"></i> @post.Title
                        <span class="badge-category">Web Development</span>
                    </h5>
                    <p class="project-description">@post.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Budget: @post.Budget</span>
                        <a href="@Url.Action("CreateProposal", "Proposal", new { projectPostId = post.Id })" class="btn btn-green">Propose</a>

                    </div>
                </div>
            }
        </div>


