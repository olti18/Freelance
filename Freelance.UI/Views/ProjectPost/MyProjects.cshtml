@model List<MyProjectsPostDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects Display</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e9f5eb; /* Soft green background */
            font-family: "Arial", sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #28a745;
            padding: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffffff;
            text-transform: uppercase;
        }

            .navbar-brand:hover {
                color: #f0fff4;
            }

        .nav-link {
            color: #ffffff;
            font-weight: bold;
            text-transform: uppercase;
        }

            .nav-link:hover {
                color: #f0fff4;
            }

        /* Project List */
        .project-list {
            margin: 2rem auto;
            max-width: 800px;
            padding: 1rem;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .project-item {
            padding: 1rem 1.5rem;
            border: 1px solid #28a745;
            border-radius: 8px;
            margin-bottom: 1rem;
            background-color: #f9fcfa;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .project-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .project-title {
            font-weight: bold;
            font-size: 1.2rem;
            color: #28a745;
        }

            .project-title:hover {
                text-decoration: underline;
            }

        .project-description {
            margin: 0.5rem 0;
            color: #495057;
        }

        .project-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .project-deadline {
            font-weight: bold;
            color: #218838;
        }

        .btn-view {
            background-color: #28a745;
            color: #ffffff;
            border: none;
            border-radius: 20px;
            padding: 0.4rem 1rem;
            font-weight: bold;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

            .btn-view:hover {
                background-color: #218838;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    @* <nav class="navbar"> *@
    @*     <div class="container"> *@
    @*         <a class="navbar-brand" href="#">Projects</a> *@
    @*         <div class="d-flex"> *@
    @*             <a class="nav-link" href="#">Home</a> *@
    @*             <a class="nav-link" href="#">About</a> *@
    @*             <a class="nav-link" href="#">Contact</a> *@
    @*         </div> *@
    @*     </div> *@
    @* </nav> *@

    <!-- Project List -->
    <div class="project-list">
        <h2 class="text-center text-success mb-4">My Projects</h2>

        @foreach(var post in Model){
        <!-- Project Item -->
        <div class="project-item">
            <div class="project-title">@post.Title</div>
                <p class="project-description">@post.Description</p>
            <div class="project-details">
                    <span class="project-deadline">@post.Budget</span>
                    <form method="post" asp-action="DeleteProject" asp-controller="ProjectPost">
                        <input type="hidden" name="id" value="@post.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
            </div>
        </div>
        }
        
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>









