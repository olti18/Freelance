@model List<MyProjectsPostDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upwork-Style Grid/List</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f9fafb;
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #4caf50;
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: white;
        }

        .header {
            background-color: #4caf50;
            color: white;
            padding: 20px 15px;
            text-align: center;
            margin-bottom: 30px;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin: 0 15px;
        }

        .card {
            border: none;
            border-radius: 8px;
            overflow: hidden;
            background: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .card h2 {
                font-size: 1.2rem;
                color: #333;
            }

            .card p {
                font-size: 0.9rem;
                color: #555;
            }

        .budget {
            font-weight: bold;
            color: #4caf50;
        }

        .btn-outline-primary {
            margin-top: 10px;
            border-radius: 20px;
        }

        .footer {
            text-align: center;
            background: #f1f1f1;
            padding: 15px;
            margin-top: 30px;
            font-size: 0.9rem;
            color: #666;
        }

        @@media (max-width: 768px) {
            .header {
                font-size: 1.2rem;
                padding: 15px 10px;
            }
        }
    </style>
</head>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model.Count == 0)
{
    <p>You have no projects yet.</p>
}
else{
    <body>
        <!-- Header Section
        <div class="header">
            <h1>Project Posts</h1>
            <p>Find the perfect projects that suit your expertise</p>
        </div>-->
        <!-- Grid View -->
        <div class="grid-container">
            <!-- Card Item -->
            @foreach (var post in Model)
            {
                <div class="card p-3">
                    <h2 class="card-title">@post.Author</h2>
                    <p class="card-text">
                        <strong>Description:</strong> @post.Description<br>
                        <strong>Budget:</strong> <span class="budget">@post.Budget</span><br>
                        <strong>Date:</strong> @post.CreatedDate.ToString("yyyy-MM-dd HH:mm")
                    </p>
                    @*<a href="@Url.Action("Details", "Projects", new { id = post.Id })" class="btn btn-outline-primary btn-sm">View Details</a>*@
                    <a href="@Url.Action("CreateProposal", "Proposal", new { projectPostId = post.Id })" class="btn btn-outline-primary btn-sm">Delete</a>
                </div>
            }
        </div>

        <!-- Footer Section -->
        <div class="footer">
            <p>&copy; 2024 Your Company. All rights reserved.</p>
        </div>

        <!-- Bootstrap Bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
}
