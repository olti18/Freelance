@model DashboardStatsDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graphical Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        @*.navbar {
            background: linear-gradient(90deg, #007bff, #6610f2);
            color: white;
        }
        .navbar-brand {
            font-size: 1.5rem;
            color: white;
        }*@
        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .chart-container {
            height: 400px;
        }
    </style>
</head>
<body>
    <!-- Navbar 
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Dashboard</a>
        </div>
    </nav>-->

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Statistic Cards -->
            <div class="col-md-3">
                <div class="card text-center bg-primary text-white mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>
                        <p class="card-text">@Model.TotalUsers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-success text-white mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Projects</h5>
                        <p class="card-text">@Model.TotalProjects</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-warning text-white mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Proposals</h5>
                        <p class="card-text">@Model.TotalProposals</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-danger text-white mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Ratings</h5>
                        <p class="card-text">@Model.TotalRating</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graph Section -->
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Metrics Overview</h5>
                        <div class="chart-container">
                            <canvas id="metricsChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer 
    <footer class="footer mt-4">
        <p class="text-center">&copy; 2024 Your Company. All rights reserved.</p>
    </footer>-->

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Metrics Overview Chart
        const ctx = document.getElementById('metricsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Users', 'Projects', 'Proposals', 'Ratings'],
                datasets: [{
                    label: 'Metrics Count',
                    data: [
                        @Model.TotalUsers,
                        @Model.TotalProjects,
                        @Model.TotalProposals,
                        @Model.TotalRating
                    ],
                    backgroundColor: [
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(220, 53, 69, 0.8)'
                    ],
                    borderColor: [
                        'rgba(0, 123, 255, 1)',
                        'rgba(40, 167, 69, 1)',
                        'rgba(255, 193, 7, 1)',
                        'rgba(220, 53, 69, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: { enabled: true }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>


